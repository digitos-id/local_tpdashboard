<div class="container">
    <div class="row mb-2">
        <div class="col-md-8"><img src = "/pix/tumbuhdanlogoTriputraGroup_2048x512.png" width="300"></div>

        <div class="d-flex align-items-center font-weight-bolder">
            <h1>PERSONAL DASHBOARD</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-center">
            <div class="card">
                <div class="card-header text-center bg-info">
                    <h5 class="text-white font-weight-bolder">{{title}}</h5>
                </div>
                <h5 id="instance-10-header" class="card-title d-inline" style="text-align: left;">Lencana Hasil Belajar</h5>
                <div class="card-body">
                    <ul class="certificates">
                        {{#certificate_list}}
                        <li>
                            <a href="#{{filename_base}}">
                                <img src ="{{ filename }}" class="certificate-image">
                                <span class="certificate-name">{{ name }}</span>
                            </a>
                        </li>
                        <div class="overlay" id="{{filename_base}}">
                            <a href="#" class="close">
                                <svg style="width:47px;height:47px" viewBox="0 0 24 24">
                                    <path fill="currentColor" d="M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2C6.47,2 2,6.47 2,12C2,17.53 6.47,22 12,22C17.53,22 22,17.53 22,12C22,6.47 17.53,2 12,2M14.59,8L12,10.59L9.41,8L8,9.41L10.59,12L8,14.59L9.41,16L12,13.41L14.59,16L16,14.59L13.41,12L16,9.41L14.59,8Z" />
                                </svg>
                            </a>
                            <img src="{{ filename }}" alt="">
                        </div>
                        {{/certificate_list}}
                    </ul>
                </div>
            </div>

            <!-- <div class="badges">
                {{ badges }}
            </div> -->
        </div>
    </div>
</div>